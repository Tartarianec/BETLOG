@{
    ViewData["Title"] = "Home Page";
}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content" style="background-color:rgba(0, 0, 0, 0.75); ">
                <div class="modal-header" style="border:none">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body" style="background-color:rgba(0, 0, 0, 0); color:white;">
                    <p>ЗДЕСЬ БУДЕТ РАСПОЛОЖЕНА ФОРМА РЕГИСТРАЦИИ</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="fullpage">
    <section class="section">
        <div class="container bg lf">
            <div class="row" id="row1">
                <div class="container-fluid header">
                    <h1>BETLOG</h1>
                </div>
            </div>
            <div class="row">
                <div class="container-fluid login-form col-lg-4 col-lg-offset-4" id="row2">
                    <div class="form-group">
                        <div class="input-group " style="width:184px; margin-top:130px; ">
                            <span class="input-group-addon glyph" style="border-radius:0px"><span class="glyphicon glyphicon-log-in" style="font-size:12px"></span></span>
                            <input type="email" class="form-control" style="height:26.5px">
                        </div>
                        <p></p>
                        <div class="input-group" style="width:184px;">
                            <span class="input-group-addon glyph" style="border-radius:0px"><span class="glyphicon glyphicon-lock" style="font-size:12px"></span></span>
                            <input type="password" class="form-control" style="height:26.5px">
                        </div>
                        <button type="submit" class="btn btn-login center-block"></button>                       
                        <p style="margin-top:140px; text-align:center">                            
                            <a href="#readMore" class="RM">READ MORE</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section"  data-anchor="readMore">
        <div class="container bg rm">
            <div class="row" >
                <div class="container-fluid" id="row3">
                    <div class="col-lg-12" style="height:inherit">
                        <button type="button" class="btn btn-up center-block" onclick="location.href='#main'"></button>  
                        <div class="container-fluid" style=" height:inherit; align-items:center; float:none; display:flex">
                            <button type="button" class="btn btn-reg center-block" style="margin-bottom:150px; margin-top:0px;" data-toggle="modal" data-target="#myModal"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </section>
</div>



